{
    "name": "php-task-runner/redis",
    "description": "Provides Redis commands for OpenEuropa Task Runner",
    "keywords": ["task-runner"],
    "type": "library",
    "require": {
        "php": ">=7.4",
        "league/container": "~3.0",
        "openeuropa/task-runner": "^2.0",
        "predis/predis": "^1"
    },
    "require-dev": {
        "phpunit/phpunit": "~7 || ~8 || ~9",
        "slevomat/coding-standard": "~6",
        "squizlabs/php_codesniffer": "~3"
    },
    "license": "EUPL-1.2",
    "authors": [
        {
            "name": "Claudiu Cristea",
            "email": "clau.cristea@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "TaskRunner\\Redis\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TaskRunner\\Redis\\Tests\\": "./tests/src/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
